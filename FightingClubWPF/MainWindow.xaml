<Window x:Class="FightingClubWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FightingClubWPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="525" Width="615">

    <Grid HorizontalAlignment="Center" Width="615" Height="420" VerticalAlignment="Center">

        <Image x:Name="MainTyler" HorizontalAlignment="Left" Margin="110,72,0,0" VerticalAlignment="Top" Width="398" Source="/tyler.jpg" Height="224"  MouseDown="MainImage_MouseDown" Cursor="Hand"/>

        <Image HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="0,23,0,0" Source="/fc-logo.png"/>
        <Button x:Name="StartBTN" Content="Начать зарубу!" HorizontalAlignment="Center" Margin="0,317,0,0" VerticalAlignment="Top" Width="118" Height="33" Click="Button_Click"/>
    </Grid>
</Window>
